<!--        </psi.referenceProvider>-->
<!--        <localInspection implementationClass="caiqichang.mybatisuite.XmlLocalInspection" language="XML"/>-->
<!--        <definitionsScopedSearch implementation="caiqichang.mybatisuite.XmlDefinitionScopedSearch"/>-->
<!--        <gotoDeclarationHandler implementation="caiqichang.mybatisuite.XmlDeclarationHandler"/>-->
        
        <dom.fileMetaData implementation="caiqichang.mybatisuite.MapperFileDescription" rootTagName="mapper"/>
    </extensions>

    <actions>
        <action id="caiqichang.mybatisuite.SqlLogAction" class="caiqichang.mybatisuite.SqlLogAction">
            <add-to-group group-id="ConsoleEditorPopupMenu"/>
        </action>
    </actions>

</idea-plugin>
