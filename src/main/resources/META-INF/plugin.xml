<idea-plugin>
    <id>caiqichang.mybatisuite</id>
    <name>MyBatiSuite</name>
    <vendor>caiqichang</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <consoleFilterProvider id="caiqichang.mybatisuite.SqlLogConsoleFilterProvider" implementation="caiqichang.mybatisuite.SqlLogConsoleFilterProvider"/>
        <toolWindow id="caiqichang.mybatisuite.SqlLogToolWindowFactory" factoryClass="caiqichang.mybatisuite.SqlLogToolWindowFactory" anchor="bottom"/>
        
